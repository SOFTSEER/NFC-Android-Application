<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8180FD"
    tools:context=".Activities.WriteProductActivity">

    <RelativeLayout
        android:id="@+id/rlBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/_15sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/str_todo"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Product"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_20sdp"/>

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:layout_below="@id/rlBack">
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/loginCard"
        app:cardCornerRadius="@dimen/loginCardRadius"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:background="#fff">

        <LinearLayout
            style="@style/linearParent"
            android:layout_gravity="center"
            android:background="#fff"
            android:padding="@dimen/loginViewsMargin">

            <TextView
                style="@style/headerTextPrimary"
                android:text="Create Product"
                android:gravity="center"
                android:layout_marginTop="@dimen/loginViewsMargin"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtname"
                style="@style/parent"
                android:textColorHint="@color/nfcblue"
                android:layout_marginTop="@dimen/loginViewsMargin">
                <EditText
                    android:id="@+id/edtname"
                    style="@style/modifiedEditText"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="@color/nfcblue"
                    android:textColor="@color/black"
                    android:text=""
                    android:maxLines="1"
                    android:hint="Product Name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtprice"
                style="@style/parent"
                android:textColorHint="@color/nfcblue"
                android:layout_marginTop="@dimen/loginViewsMargin">
                <EditText
                    android:id="@+id/edtprice"
                    style="@style/modifiedEditText"
                    android:backgroundTint="@color/nfcblue"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:hint="Price"
                    android:text=""
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtquan"
                style="@style/parent"
                android:textColorHint="@color/nfcblue"
                android:layout_marginTop="@dimen/loginViewsMargin">
                <EditText
                    android:id="@+id/edtquan"
                    style="@style/modifiedEditText"
                    android:backgroundTint="@color/nfcblue"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:hint="Quantity"
                    android:text=""
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtdesc"
                style="@style/parent"
                android:textColorHint="@color/nfcblue"
                android:layout_marginTop="@dimen/loginViewsMargin">
                <EditText
                    android:id="@+id/edtdesc"
                    style="@style/modifiedEditText"
                    android:backgroundTint="@color/nfcblue"
                    android:textColor="@color/black"
                    android:hint="Description"
                    android:text=""
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtkey"
                style="@style/parent"
                android:textColorHint="@color/nfcblue"
                android:layout_marginTop="@dimen/loginViewsMargin">
                <EditText
                    android:id="@+id/edtkey"
                    style="@style/modifiedEditText"
                    android:backgroundTint="@color/nfcblue"
                    android:textColor="@color/black"
                    android:hint="Key"
                    android:text=""
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/cirLoginButton"
                style="@style/loginButton"
                android:text="Create"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</RelativeLayout>